<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConsumerCodeValidationActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_30"
        android:paddingTop="@dimen/margin_30" >

        <ImageView
            android:id="@+id/iv_saoma_validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/saoma_validation" />

        <TextView
            style="@style/black_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_saoma_validation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="点击进行扫码验劵" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_30"
        android:text="你还可以"
        android:textColor="@color/text_1"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_30"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_validation_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:background="@drawable/shape_white_validation"
            android:hint="请输入验证密码"
            android:maxLength="50"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_30"
            android:paddingTop="@dimen/margin_15"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_validation_password"
            style="@style/white_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="2"
            android:background="@drawable/shape_bule_validation"
            android:paddingBottom="@dimen/margin_12"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_12"
            android:text="验证" />
    </LinearLayout>

</LinearLayout>