        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="填写地址:" />

            <EditText
                android:id="@+id/et_address"
                style="@style/light_gray_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@color/white"
                android:hint="填写报修详细地址" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_repairstype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="报修类型" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/light_gray_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/yindao" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_content"
            style="@style/black_15"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_white_bg"
            android:gravity="left|top"
            android:hint="请简要描述报修内容，以便我们更好的处理。"
            android:padding="10dp"
            android:textColorHint="@color/text_color1" />

        <com.tg.dippermerchant.view.ImageViewGroup
            android:id="@+id/imgGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_bg" />
    </LinearLayout>

</ScrollView>