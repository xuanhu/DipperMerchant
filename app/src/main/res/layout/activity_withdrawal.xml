<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WithdrawalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textview"
            style="@style/black_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.00"
            android:textColor="@color/order_state"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_18"
        android:background="@color/tixian_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_18"
        android:paddingTop="@dimen/margin_18">

        <LinearLayout
            android:id="@+id/ll_bank_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_18"
            android:paddingRight="@dimen/margin_18">

            <TextView
                style="@style/black_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现银行卡" />

            <TextView
                android:id="@+id/tv_bank_type"
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="请选择" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yindao" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/tixian_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_18"
            android:paddingRight="@dimen/margin_18"
            android:paddingTop="@dimen/margin_18">

            <TextView
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="提现金额:" />

            <EditText
                android:id="@+id/et_sum"
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@color/white"
                android:gravity="right"
                android:hint="请输入提现金额"
                android:textColorHint="@color/text_color1"
                android:maxLength="10" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_warm_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_18"
        android:singleLine="false"
        android:textColor="@color/text_12"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_record"
            android:textSize="15sp"
            android:textColor="@color/home_fill"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看提现记录"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>