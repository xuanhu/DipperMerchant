<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <com.tg.dippermerchant.view.LineEditText
        style="@style/black_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="请填写商家用户名"
        android:maxLength="11"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/forget_pwd" />

    <com.tg.dippermerchant.view.LineEditText
        android:layout_marginTop="1dp"
        android:id="@+id/edit_user"
        style="@style/black_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="请填写商家手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/forget_pwd" />

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.tg.dippermerchant.view.LineEditText
            android:id="@+id/edit_code"
            style="@style/black_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="6"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/forget_pwd" />

        <com.tg.dippermerchant.view.TimingButton
            android:id="@+id/btn_get_code"
            style="@style/white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_blue_bg"
            android:padding="10dp"
            android:text="获取验证码" />
    </LinearLayout>

    <com.tg.dippermerchant.view.LineEditText
        android:layout_marginTop="1dp"
        android:id="@+id/edit_password"
        style="@style/black_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:digits="@string/text_password"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/forget_pwd" />

    <com.tg.dippermerchant.view.LineEditText
        android:layout_marginTop="1dp"
        android:id="@+id/edit_password2"
        style="@style/black_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:digits="@string/text_password"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/forget_pwd" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"/>
</LinearLayout>