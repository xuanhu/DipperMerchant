<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tg.dippermerchant.ShipmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_18"
            android:paddingRight="@dimen/margin_18"
            android:paddingTop="@dimen/margin_18">

            <TextView
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="快递公司" />

            <EditText
                android:id="@+id/et_company"
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@color/white"
                android:gravity="right"
                android:hint="请输入快递公司"
                android:maxLength="20"
                android:textColorHint="@color/text_color1" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tixian_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_18"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_18"
            android:paddingRight="@dimen/margin_18"
            android:paddingTop="@dimen/margin_18">

            <TextView
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="快递单号:" />

            <EditText
                android:id="@+id/et_number"
                style="@style/black_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@color/white"
                android:gravity="right"
                android:hint="请输入快递单号"
                android:maxLength="20"
                android:inputType="number"
                android:digits="@string/text_password"
                android:textColorHint="@color/text_color1" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tixian_line" />

    <EditText
        android:id="@+id/et_remark"
        style="@style/black_15"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_white_bg"
        android:gravity="left|top"
        android:hint="请输入发货备注（非必填）"
        android:padding="10dp"
        android:textColorHint="@color/text_color1" />
</LinearLayout>
